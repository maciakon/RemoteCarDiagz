@page "/fetchdata"
@using System.Collections.Generic
@using RemoteCarDiagz.Shared.Domain
@inject HttpClient Http

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (activeMeasurements == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var measurement in activeMeasurements)
            {
                <tr>
                    <td>@measurement</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<PidIdsEnum> activeMeasurements;

    protected override async Task OnInitializedAsync()
    {
        var activeMeasurements = await Http.GetFromJsonAsync<List<PidIdsEnum>>("configuration");
    }
}
